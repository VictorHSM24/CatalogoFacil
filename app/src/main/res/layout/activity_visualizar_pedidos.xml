<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fundo_base"
    android:padding="16dp"
    tools:context=".ui.VisualizarPedidosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todos os Pedidos"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/texto_icones"
        android:layout_marginBottom="16dp"/>

    <ListView
        android:id="@+id/listViewPedidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="8dp"
        android:padding="4dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonVoltarInicialVisualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voltar ao Menu Principal"
        android:padding="12dp"
        android:backgroundTint="@color/secundaria"
        android:textColor="@color/white"/>

</LinearLayout>