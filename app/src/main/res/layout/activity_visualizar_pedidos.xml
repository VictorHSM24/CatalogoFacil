<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fundo_base"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="24dp"
    tools:context=".ui.VisualizarPedidosActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Todos os Pedidos"
        android:textColor="@color/texto_icones"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listViewPedidos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="-16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:paddingHorizontal="0dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonVoltarInicialVisualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/secundaria"
        android:padding="12dp"
        android:text="Voltar ao Menu Principal"
        android:textColor="@color/white"
        app:cornerRadius="8dp" />
</LinearLayout>